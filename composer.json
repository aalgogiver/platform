{
    "name": "oro/platform",
    "description": "Business Application Platform (BAP)",
    "homepage": "https://github.com/oroinc/platform.git",
    "license": "MIT",
    "authors": [
        {
            "name": "Oro, Inc",
            "homepage": "http://www.orocrm.com"
        }
    ],
    "require": {
        "php": "7.1.*",
        "ext-intl": "*",
        "ext-mbstring": "*",
        "ext-gd": "*",
        "ext-xml": "*",
        "ext-zip": "*",
        "ext-openssl": "*",
        "ext-mcrypt": "*",
	    "psr/log": "~1.0",
        "oro/doctrine-extensions": "1.1.*",
	    "akeneo/batch-bundle": "dev-4.2_no_symfony",
	    "a2lix/translation-form-bundle": "1.x-dev"
    },
    "require-dev": {
        "sensio/generator-bundle": "3.1.2",
        "behat/behat": "3.2.2",
        "behat/mink-extension": "2.2.*",
        "behat/mink-selenium2-driver": "1.*",
        "behat/symfony2-extension": "2.1.1",
        "nelmio/alice": "2.2.*",
        "phpunit/phpunit": "5.7.*",
        "phpunit/phpunit-selenium": "3.0.*",
        "johnkary/phpunit-speedtrap": "1.0.*",
        "mybuilder/phpunit-accelerator": "1.2.*",
        "squizlabs/php_codesniffer": "2.8.*",
        "phpmd/phpmd": "2.6.*",
        "sebastian/phpcpd": "dev-master#cff7f36c2ae89d59987de25d14fd41a72dd4a703 as 3.1.0",
        "phpunit/phpcov": "3.1.*",
        "symfony/phpunit-bridge": "3.2.*",
        "friendsofphp/php-cs-fixer": "2.1.*"
    },
    "repositories": {
       "translationForm": {
          "type": "vcs",
          "url": "https://github.com/aalgogiver/TranslationFormBundle"
       },
       "batch": {
            "type": "vcs",
            "url": "https://github.com/aalgogiver/BatchBundle",
            "reference": "3ecebd637ba8a4b3269c641bc55905a8397af34c"
        },	        
        "oro": {
            "type": "composer",
            "url": "https://packagist.orocrm.com"
        },
        "asset-packagist": {
            "type": "composer",
            "url": "https://asset-packagist.orocrm.com"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev",
	    "dev-symfony_components": "2.x-dev"
        }
    },
    "autoload": {
        "psr-4": {"": "src/"},
        "exclude-from-classmap": ["/Tests/"]
    }
}
